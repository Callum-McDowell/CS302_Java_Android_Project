<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.COMPSYS302_Project_Two" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="background">@color/secondary_light</item>
    </style>

    <style name="Theme.COMPSYS302_Project_Two.LaunchScreen" parent="Theme.COMPSYS302_Project_Two">
        <item name="android:windowBackground">@drawable/launch_screen_drawable</item>
    </style>

    <!--Custom Divider Styles-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="PrimeDivider" parent ="Divider">
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@color/primary</item>
    </style>

    <!--Custom Text/Font Styles-->
    <style name="TextAppearance.MyApp.DarkBody1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.MyApp.ItemTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="TextAppearance.MyApp.LightBody1" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextAppearance.MyApp.WhiteDisplay" parent="@style/TextAppearance.AppCompat.Display1">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <!--Custom icon style-->
    <style name="ActionIcon" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:tint">@color/primary</item>
        <item name="android:padding">12dp</item>
    </style>

    <!--Custom Recyclable view styles-->
    <style name="ListViewStyle">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">10dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <!--Custom Card view styles-->
    <style name="CardViewStyle" parent="CardView">
        <item name="elevation">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>
</resources>